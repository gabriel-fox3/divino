{{ header }}

<style>

</style>

<div class="container-fluid d-flex align-items-center justify-content-center" id="evento-interna" style="background-image: url(assets/img/eventos/eventos.jpg); margin-top: 105px;">
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-12 col-md-8 my-auto">
        <h1>{{ evento.name }}</h1>
        <span class="preco">{{ evento.is_free == 1 ? 'Gratuito' : 'R$ ' ~ evento.priceFull }}</span>
        <p>
          {{ evento.description }}
        </p>
      </div>
      <div class="col-12 col-md-8">
        <div class="item py-4">
          <div class="row">
            <div class="col-3 col-md-2 text-left my-auto">
              <img src="assets/img/eventos/deadline.png" alt="" class="img-fluid">
            </div>
            <div class="col-9">
              <div class="d-flex align-items-start justify-content-center flex-column">
                <span><strong>{{ evento.data_ev }}</strong> ({{ evento.dia_ev }})</span>
                <span><strong>{{ evento.initTime }}</strong> às <strong>{{ evento.endTime }}</strong></span>
              </div>
            </div>
          </div>
        </div>
        <div class="item py-4">
          <div class="row">
            <div class="col-3 col-md-2 text-left my-auto">
              <img src="assets/img/eventos/placeholder.png" alt="" class="img-fluid">
            </div>
            <div class="col-9">
              <div class="d-flex align-items-start justify-content-center flex-column">
                {% if evento.isOnline == 1 %}
                  <span>Evento on-line!</span>
                {% else %}
                  <span>{{ evento.local }}</span>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        
        {% if evento.data_deadline is defined %}
          <h6 class="data-limite">Data limite de inscrição - {{ evento.data_deadline }}</h6>
        {% endif %}
        <br>
        <a href="#" class="btn btn-inscreva">Inscreva-se</a>
      </div>
    </div>
  </div>
</div>

{{ footer }}