														<strong>{{ evento.endTime }}</strong>
													</span>
												</li>
											</ul>
										</div>
										<div class="card-footer d-flex justify-content-center pb-4">
											<a href="?route=sobre/eventos/view&id={{ evento.id }}" class="btn">Quero participar</a>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
      </div>
		{% endif %}
	</div>
</div>

{{ footer }}


<script>

  $(document).ready(function () {

    var app = Base;

    var exclusivos = $('#exclusivos .container');
    app.infinite_row(exclusivos, function(row, a) {
      let i = $(row).find('.ativo');
      let col = i.parent();
      if ((a == 'next' && col.next().length) || (a == 'prev' && col.prev().length)) {
        if (a == 'next') {
          col.next().find('.card').addClass('ativo');
        } else {
          col.prev().find('.card').addClass('ativo');
        }
        i.removeClass('ativo');
      }
    }); 

    var abertos = $('#abertos .container');
    app.infinite_row(abertos, function(row, a) {
      let i = $(row).find('.ativo');
      let col = i.parent();
      if ((a == 'next' && col.next().length) || (a == 'prev' && col.prev().length)) {
        if (a == 'next') {
          col.next().find('.card').addClass('ativo');
        } else {
          col.prev().find('.card').addClass('ativo');
        }
        i.removeClass('ativo');
      }
    }); 

  });

</script>