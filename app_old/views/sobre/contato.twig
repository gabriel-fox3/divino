{{ header }}

<div class="container-fluid header-quemsomos" style="background-image: url(assets/img/sobre/quem_somos_bg.jpg);">
  <div class="container">
    <div class="row" style="min-height: 250px;">
      <div class="col-12 text-center my-auto">
        <h2>Contato</h2>
      </div>
    </div>
  </div>
</div>

  <div class="container contato py-5">
    <div class="row">
      <div class="col-12 col-md-6 my-auto">
        <h3 class="mb-3">Envie sua mensagem</h3>
        {% if success is defined %}
          <div class="alert-custom alert alert-success">
            <div class="alert-icon"><i class="fas fa-check"></i></div>
            {{ success }}
          </div>
        {% endif %}
      
        {% if error is defined %}
          <div class="alert-custom alert alert-danger">
            <div class="alert-icon"><i class="fas fa-times"></i></div>
            {{ error }}
          </div>
        {% endif %}
        <form method="post">
          <div class="form-row mt-3">
            <div class="col-12 col-md-6 py-2">
              <input type="text" class="form-control" placeholder="Seu nome" name="nome_do_responsavel" required>
            </div>
            <div class="col-12 col-md-6 py-2">
              <input type="email" class="form-control" placeholder="Endereço de E-mail" name="email" required>
            </div>
          </div>
          <div class="form-row">
            <div class="col-12 col-md-6 py-2">
              <input type="tel" class="form-control" placeholder="DDD + Telefone" name="telefone" required>
            </div>
            <div class="col-12 col-md-6 py-2">
              <input type="text" class="form-control" placeholder="Nome da Empresa" name="nome_da_empresa">
            </div>
          </div>
          <div class="form-row">
            <div class="col-12 py-2">
              <textarea class="form-control" rows="5" name="mensagem" placeholder="Mensagem" required></textarea>
            </div>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <div class="g-recaptcha" data-sitekey="6LfPgbYcAAAAADrN-z7fduMmUoJ1HHMPJGMyTNVT"></div>
          </div>
          <div class="form-row mt-4">
            <div class="col-10 col-md-7 mx-auto">
              <button type="submit" class="btn btn-contato"><i class="fas fa-envelope"></i> Enviar mensagem</butt>
            </div>
          </div>
        </form>
      </div>
      <div class="col-12 col-md-6 pt-5 pt-md-0">
        <h4>Precisa de ajuda?</h3>
        <h2>Fale conosco</h2>

        <p>Responderemos em menos de 24 horas!</p>
        <div class="informacoes">
          <p><i class="fas fa-envelope"></i>multibio@multibio.com.br</p>
          <p><i class="fas fa-phone"></i>(31) 99570-9667</p>
          <p><i class="fas fa-phone"></i>(31) 99358-9669</p>
          <p><i class="fas fa-calendar"></i>Segunda á Sexta de 08:00 às 18:00</p>
        </div>

        <div class="mt-3">
          <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14998.499309938446!2d-44.0146517!3d-19.9822741!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x21b5af721bb7fd2f!2sMultibio%20Com%C3%A9rcio%20e%20Representa%C3%A7%C3%B5es!5e0!3m2!1spt-BR!2sbr!4v1630525130769!5m2!1spt-BR!2sbr" width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
      </div>
    </div>
  </div>
{{ footer }}
